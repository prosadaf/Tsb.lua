-- SERVICES
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local LocalPlayer = Players.LocalPlayer

-- CLEANUP GUI
pcall(function()
	local existingGui = LocalPlayer:FindFirstChild("PlayerGui"):FindFirstChild("TheStrongestBattlegrounds")
	if existingGui then existingGui:Destroy() end
end)

-- GUI
local gui = Instance.new("ScreenGui")
gui.Name = "TheStrongestBattlegrounds"
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 280, 0, 350)
frame.Position = UDim2.new(0, 20, 0.5, -175)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "The Strongest Battlegrounds"
title.TextColor3 = Color3.fromRGB(255, 100, 100)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
title.TextStrokeTransparency = 0.1 -- black stroke instead of white glow
title.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
title.Parent = frame

Instance.new("UICorner", title).CornerRadius = UDim.new(0, 8)

local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1, -20, 0, 120)
scroll.Position = UDim2.new(0, 10, 0, 60)
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.ScrollBarThickness = 6
scroll.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
scroll.BorderSizePixel = 0
scroll.Parent = frame

Instance.new("UICorner", scroll).CornerRadius = UDim.new(0, 8)

-- TARGET LIST & ORBIT LOGIC
local selectedTarget = nil
local orbiting = false
local orbitConnection = nil

local function stopOrbit()
	orbiting = false
	if orbitConnection then
		orbitConnection:Disconnect()
		orbitConnection = nil
	end
end

local function startOrbit()
	if not selectedTarget then return end
	local myHRP = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
	local targetHRP = selectedTarget.Character and selectedTarget.Character:FindFirstChild("HumanoidRootPart")
	if not myHRP or not targetHRP then return end

	stopOrbit()

	orbiting = true
	local dist = 5

	orbitConnection = RunService.RenderStepped:Connect(function()
		if not orbiting or not myHRP or not targetHRP then return end
		local forward = targetHRP.CFrame.LookVector
		local behind = targetHRP.Position - forward * dist
		myHRP.CFrame = CFrame.new(behind, targetHRP.Position)
	end)
end

local function refreshTargets()
	scroll:ClearAllChildren()
	local y = 0

	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			local btn = Instance.new("TextButton")
			btn.Size = UDim2.new(1, 0, 0, 30)
			btn.Position = UDim2.new(0, 0, 0, y)
			btn.Text = plr.Name
			btn.TextColor3 = Color3.fromRGB(255, 255, 255)
			btn.Font = Enum.Font.Gotham
			btn.TextSize = 16
			btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
			btn.BorderSizePixel = 0
			btn.Parent = scroll

			Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

			btn.MouseButton1Click:Connect(function()
				selectedTarget = plr
				title.Text = "üéØ Target: " .. plr.DisplayName
				startOrbit()
			end)

			y = y + 35
		end
	end

	scroll.CanvasSize = UDim2.new(0, 0, 0, y)
end

-- BUTTON CREATION
local function makeBtn(text, yOffset, color, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -20, 0, 36)
	btn.Position = UDim2.new(0, 10, 0, yOffset)
	btn.BackgroundColor3 = color
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 18
	btn.Text = text
	btn.BorderSizePixel = 0
	btn.Parent = frame

	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- BUTTONS
makeBtn("üî• Start Orbit", 200, Color3.fromRGB(255, 0, 0), function()
	startOrbit()
end)

makeBtn("‚ùå Stop Orbit", 240, Color3.fromRGB(150, 0, 0), function()
	stopOrbit()
end)

makeBtn("üîÑ Refresh Players", 280, Color3.fromRGB(0, 100, 255), function()
	refreshTargets()
end)

-- AUTO REFRESH ON PLAYER JOIN/LEAVE WITH ORBIT STOP LOGIC
Players.PlayerAdded:Connect(refreshTargets)

Players.PlayerRemoving:Connect(function(plr)
	if plr == selectedTarget then
		stopOrbit()
		selectedTarget = nil
		title.Text = "The Strongest Battlegrounds"
	end
	refreshTargets()
end)

-- INITIAL LOAD
refreshTargets()
